/* pages/mall/mall.wxss */
page {
    overflow: hidden;
}

.header {
    height: 40px;
    background-color: #fff;
}

.grid_custom {
    padding: 0px;  
}

.grid_content {
    border: 0 !important;
    padding: 5px !important;
    border-radius: 5px !important;
    background-color: #f7f8fa !important;
}

.title_font {
    width: 100%;
    font-weight: 600;
    font-size: 15px;
    padding: 6px 0;
    padding-left: 6px;
}

.red-text {
    color: red;
}

.box{
    width: 100%;
    position: relative;
}
.box::before{
    display: block;
    content: '';
    width: 100%;
    padding-top: 100%;
}
.innerbox {
    position: absolute;
    top: 0;
    left: 0;
    width: 100% ;
    height: 100% ;
}
